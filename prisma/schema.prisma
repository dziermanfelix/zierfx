generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id      Int     @id @default(autoincrement())
  slug    String
  name    String  @unique
  albums  Album[]
}

model Album {
  id          Int       @id @default(autoincrement())
  slug        String
  name        String
  releaseDate DateTime
  artworkUrl  String?
  artist      Artist    @relation(fields: [artistId], references: [id], onDelete: Cascade)
  artistId    Int
  tracks      Track[]
}

model Track {
  id        Int    @id @default(autoincrement())
  number    Int
  name      String
  audioUrl  String?
  length    Int?
  album     Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId   Int
}

model TourDate {
  id          Int      @id @default(autoincrement())
  date        DateTime
  venue       String
  city        String
  state       String?
  country     String
  ticketUrl   String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

